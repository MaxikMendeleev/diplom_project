%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      -logo_page = root_path
      - if signed_in?
        -logo_page = home_path
      = link_to "HRMSupProgramm ", logo_page, id: "logo"
      %nav
        %ul.nav
          - if signed_in?
            %li#fat-menu.dropdown.float-right.h4
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Аккаунт
                %b.caret
                %ul.dropdown-menu
                  %li= link_to "Профиль", current_user
                  %li= link_to "Настройки", edit_user_path(current_user)
                  %li.divider
                  %li
                    = link_to "Выйти", signout_path, method: "delete"
            %li.float-right.h4= link_to "Что я сейчас делаю", todo_path
            %li.float-right.h4= link_to "Затраченное время", '#'
            %li.float-right.h4= link_to "Проекты", projects_path
            - if is_admin?(current_user)
              %li.float-right.h4= link_to "Сотрудники", users_path
          - else
            %li.float-right.h4= link_to "Войти", signin_path
